<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>WebRTC</title>
        <link rel="stylesheet"
              href="{{ url_for('static' , filename='styles.css') }}"/>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap"
              rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
              rel="stylesheet"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js"></script>
    </head>
    <body>
        <div class="streams">
            <div class="video">
                <div class="cover center">
                    <h3 class="uppercase reset-mp">local stream</h3>
                </div>
                <video id="local" autoplay>
                </video>
            </div>
            <div class="video">
                <div class="loading visible">
                    <i class="fas fa-circle-notch fa-spin"></i>
                </div>
                <div class="cover center">
                    <h3 class="uppercase reset-mp">remote stream</h3>
                </div>
                <video id="remote" autoplay>
                </video>
            </div>
        </div>
        <div class="controls">
            <button class="uppercase" onclick="makeCall()">make call</button>
            {# <button class="uppercase" onclick="()">Accept call</button> #}
            {# <button class="uppercase" onclick="createOffer()">create offer</button>#}
            <button class="uppercase" onclick="pauseStream()">Pause</button>
            <button class="uppercase" onclick="endStream()"> End Stream</button> 
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.5.1/socket.io.js"></script>
        <script src="{{ url_for('static' , filename='main.js') }}"></script>
    </body>
</html>
